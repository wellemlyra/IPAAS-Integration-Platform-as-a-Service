                "type": "text/javascript",
                "exec": [
                  "const ts = Date.now();",
                  "pm.variables.set(\"assigneeName\", \"Responsável \"+ts);",
                  "pm.variables.set(\"assigneeEmail\", `assignee_${ts}@ipaas.local`);"
                ]
              }
            },
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "// captura assigneeId",
                  "pm.test(\"201 Created\", function(){ pm.response.to.have.status(201); });",
                  "const j = pm.response.json();",
                  "pm.collectionVariables.set(\"assigneeId\", j.id);"
                ]
